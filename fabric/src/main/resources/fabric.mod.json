{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${mod_description}",
    "authors": [ "${mod_author}" ],
    "contact": {
        "homepage": "https://github.com/Stein-N/Resource-Furnaces",
        "sources": "https://github.com/Stein-N/Resource-Furnaces"
    },
    "license": "${mod_license}",
    "icon": "icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [ "net.xstopho.${mod_id}.ResourceFurnaces" ]
    },
    "mixins": [
        "${mod_id}.mixins.json",
        "${mod_id}.fabric.mixins.json"
    ],
    "depends": {
        "fabric-api": "*",
        "fabricloader": "*",
        "minecraft": "${minecraft_version}",
        "java": "${java_version}",

        "resourceconfigapi": ">=${resource_config_api}",
        "resourcelibrary": ">=${resource_library}"
    }
}